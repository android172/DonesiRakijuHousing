<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkuciSe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/logo_color</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!--
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        -->
        <!-- Customize your theme here.-->
    </style>

    <style name="Theme.SkuciSe.FrontpageTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/logo_color</item>
        <item name="colorPrimaryDark">@color/logo_color</item>
        <item name="colorPrimaryVariant">@color/logo_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/logo_color4</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="cardViewStyle">@style/roundedCardView</item>
        <item name="android:checkboxStyle">@style/filterCheckboxesStyle</item>
        <item name="android:radioButtonStyle">@style/radioButtonStyle</item>
        <!--<item name="android:textViewStyle">@drawable/tw_style1</item>-->
    </style>

<!--
    <style name="Theme.SkuciSe.SearchTheme" parent="Theme.SkuciSe.FrontpageTheme">
        <item name="android:checkboxStyle">@style/filterCheckboxesStyle</item>
    </style>
-->

    <style name="radioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="minWidth">100dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="filterCheckboxesStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="background">@drawable/checkbox_selector_shape</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="minWidth">100dp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="backgroundTint">@null</item>-->
    </style>

    <style name="Theme.SkuciSe.LoginTheme" parent="Theme.SkuciSe">
        <item name="android:editTextStyle">@style/loginEditText</item>
        <!--<item name="editTextBackground">@drawable/login_tw_style</item>-->
    </style>

    <style name="loginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/login_et_style</item>
        <item name="android:backgroundTint">@null</item>
        <item name="paddingStart">20dp</item>
        <item name="paddingEnd">20dp</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="roundedCardView" parent="Base.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
    <style name="loginLeftDarkButtonStyle" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/left_button_style_dark</item>
        <item name="backgroundTint">@null</item>
        <item name="textFillColor">@color/transparent_light</item>
    </style>
    <style name="loginLeftLightButtonStyle" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/left_button_style_light</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="loginRightLightButtonStyle" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/right_button_style_light</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="loginRightDarkButtonStyle" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/right_button_style_dark</item>
        <item name="backgroundTint">@null</item>
        <item name="textFillColor">@color/transparent_light</item>
    </style>

    <style name="cityTilesText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="cityTilesText.small" parent="cityTilesText">
        <item name="android:textSize">18sp</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
    </style>
</resources>